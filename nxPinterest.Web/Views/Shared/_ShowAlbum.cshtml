@model IEnumerable<nxPinterest.Data.Models.UserAlbum>
<style>
    ::-webkit-scrollbar-thumb {
        background-color: #212529;
    }

    ::-webkit-scrollbar-track {
        background-color: #ab9696;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <h3 class="text-rigth">アルバム登録</h3>
        <input type="email" class="form-control" id="createUserMediaFolderName" value="サンプルアルバム">

    </div>
</div>

<div class="row float-end">
    <div class="col-md-12 mt-2">
        <button type="button" class="btn btn-outline-secondary btn-md" id="createUserMediaFolderButton">登録</button>
    </div>
</div>

<div class="clearfix"></div>
<h6 class="mt-2">List album</h6>
<hr class="mb-5">

<div class="row mt-4" style="height: 300px !important;overflow-y: scroll">

    <ul class="list-group">

        @foreach (var item in Model)
        {
            <li href="#" class="list-group-item list-group-item-action text-primary border-0">
                <img src="@item.AlbumUrl" class="rounded" style="width:20%" /> @item.AlbumName
            </li>
        }

    </ul>
</div>
