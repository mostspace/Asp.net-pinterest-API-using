@model IEnumerable<nxPinterest.Data.ViewModels.UserAlbumViewModel>
<div class="row">
    <div class="col-md-12">
        <h3 class="text-rigth">アルバムに追加</h3>
        <input type="text" class="form-control" id="createUserMediaFolderName" placeholder="新しいアルバム">

    </div>
</div>

<div class="row float-end">
    <div class="col-md-12 mt-2">
        <button type="button" class="btn btn-outline-secondary btn-md" id="createUserMediaFolderButton">作成</button>
    </div>
</div>

<div class="clearfix"></div>
<h6 class="mt-2">アルバム</h6>
<hr class="mb-5">

<div class="row mt-4 list__album" style=" max-height: 300px; overflow-y: scroll;">

    <ul class="list-group">

        @foreach (var item in Model) {
            <li href="#" class="list-group-item list-group-item-action text-primary border-0">
                <img style="width: 20%;" src="@item.AlbumThumbnailUrl" class="rounded" /> @item.AlbumName
            </li>
        }

    </ul>
</div>