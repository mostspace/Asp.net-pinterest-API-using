@model IEnumerable<nxPinterest.Data.ViewModels.UserAlbumViewModel>
<div class="row">
    <div class="form-group row">
        <label for="createUserMediaFolderName" class="col-sm-4 col-form-label">新しいアルバム</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="createUserMediaFolderName">
            <button type="button" class="btn btn-outline-secondary btn-md mt-2" id="createUserMediaFolderButton">作成</button>
        </div>
    </div>
</div>
<div class="clearfix mb-2"></div>
<hr>
<h6>アルバム</h6>
<div class="row list__album" style=" max-height: 300px; overflow-y: scroll;">

    <ul class="list-group" id="listalbum">

        @foreach (var item in Model) {
            <li class="list-group-item list-group-item-action border-0" data-albumname="@item.AlbumName">
                <img style="width: 20%;" src="@item.AlbumThumbnailUrl" class="rounded" /> @item.AlbumName (@item.ImageCount)
            </li>
        }

    </ul>
</div>