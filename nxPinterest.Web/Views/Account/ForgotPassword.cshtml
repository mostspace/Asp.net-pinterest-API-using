@model nxPinterest.Services.Models.Request.ForgotPasswordRequest
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="content">
    <div class="card certification-card">
        <div class="card-body">
            <div class="form-text text-danger">
                @if (TempData["custom-validation-message"] != null)
                {
                    <span>@TempData["custom-validation-message"]</span>
                }
            </div>
            <div class="form-text text-success">
                @if (TempData["custom-validation-success-message"] != null)
                {
                    <span>@TempData["custom-validation-success-message"]</span>
                }
            </div>
            <form class="certification text-color-white" method="post" asp-action="ResetPassword" asp-controller="Account">
                <span asp-validation-for="Email" class="text-danger"></span>
                <input type="email" class="form-control input-control useremail" asp-for="Email" placeholder="メールアドレス" />
                
                @if((string)TempData["Message"] != "")
                {
                    <div class="form-text text-danger login-err-msg">
                        @TempData["Message"]
                    </div>
                }

