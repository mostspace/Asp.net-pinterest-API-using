@model nxPinterest.Services.Models.Request.UserContainerRegistrationRequest
@{
    ViewData["Title"] = "コンテナ変更";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-content-wrapper">
    <div style="margin: 25px;">
        <div class="register-body container">
            <div class="form-text text-danger">
                @if (TempData["custom-validation-message"] != null)
                {
                    <div class="col-lg-12 col-md-12 col-sm-12 mb-3 alert alert-danger alert-dismissible fade show" role="alert">
                        <span>@TempData["custom-validation-message"]</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: none;border-style: none;float: right;">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div><br />
                }
            </div>
            <div class="form-text text-success">
                @if (TempData["custom-validation-success-message"] != null)
                {
                    <div class="col-lg-12 col-md-12 col-sm-12 mb-3 alert alert-success alert-dismissible fade show" role="alert">
                        <span>@TempData["custom-validation-success-message"]</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: none;border-style: none;float: right;">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div><br />
                }
            </div>
            <form class="p-3" method="post" asp-action="UserContainerEdit" asp-controller="Account">
                <div class="col-lg-12 row">
                    <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                        <label for="containername" style="margin-bottom: 0.5rem;">コンテナID</label>
                        <input readonly type="text" class="form-control" asp-for="container_id">
                    </div>
                </div>
                <div class="col-lg-12 row">
                    <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                        <label for="containername" style="margin-bottom: 0.5rem;">コンテナ名</label>
                        <input type="text" class="form-control" asp-for="container_name">                                    
                        <div class="form-text text-danger">@Html.ValidationMessageFor(c => c.container_name)</div>
                    </div>
                </div>
                <div class="col-lg-12 row">
                    <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                        <label for="containername" style="margin-bottom: 0.5rem;">有効</label>
                        <input type="checkbox" asp-for="container_visibility">
                    </div>
                </div>
                <div class="col-lg-12 mb-3 row">
                    <div class="col-lg-5 col-md-12 col-sm-12">
                        @* <button type="button" class="col-4 btn btn-light" style="border-color: #dbdbdb !important;" onclick="window.location='@Url.Action("NormalUserList","account")';">一覧に戻る</button>
                        <button type="submit" class="col-4 btn btn-primary" id="btn-register">変更</button>*@
                        @*編集ボタン機能*@
                        <button type="button" class="btn btn-default btn-back" onclick="window.location='@Url.Action("UserContainerList","account")';">一覧に戻る</button>
                        <button type="submit" class="btn btn-default btn-create" id="btn-register">変更</button>
                        @*ssa20220527*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

