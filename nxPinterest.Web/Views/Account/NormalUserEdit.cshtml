@model nxPinterest.Services.Models.Request.NormalUserRegistrationRequest
@{
    ViewData["Title"] = "ユーザ更新";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
     .menu-bar{
        color:#fff;
        font-size: var(--bs-body-font-size);
        font-weight: var(--bs-body-font-weight);
        line-height: var(--bs-body-line-height);
        -webkit-text-size-adjust: 100%;
    }

    .btn-create{
        color: #eef2f7;
        margin-left: 0;
        font-size: .9rem;
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        /* color: #6c757d; */
        text-align: center;
        vertical-align: middle;
        width: 100px;
        height: 50px;
    }

    .btn-default {
        background-color: #343a40;
        border: none;
        border-radius: 20px;
        position: relative;
       /* color: #eef2f7;*/
        }

        .btn-back{
            background-color: #eef2f7;
            border: none;
            border-radius: 20px;
            position: relative;
             margin-left: 0;
            font-size: .9rem;
            display: inline-block;
            font-weight: 400;
            line-height: 1.5;
            /* color: #6c757d; */
            text-align: center;
            vertical-align: middle;
            width: 100px;
            height: 50px;
        }

</style>

@*<body style="background-color: #dbdbdb;">//change_bgcolor_20220530_ssa*@
<body style="background-color: #000;">
    <div class="d-flex" id="wrapper">
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #5a5e64 !important;padding-top:5px;padding-bottom:5px;">
                <div class="container-fluid">
                <div class=""><h4 class="menu-bar">ユーザ変更</h4></div>              
                    <div class="dropdown menu-bar">
                        <i class="bi bi-person-circle"></i>
                            @{
                                if(@ViewBag.UserDispName == null || @ViewBag.UserDispName.Trim() == "")
                                {
                                   <span style="padding-left:5px;padding-right:60px"></span>
                                }
                                else
                                {
                                    <span style="padding-left:5px;padding-right:10px">@ViewBag.UserDispName</span>
                                }
                            }
                        <i class="bi bi-chevron-down"></i>
                            <div class="dropdown-content">
                                <a href="@Url.Action("ChangePassword", "account")">パスワード変更</a>
                                <a href="@Url.Action("LogOut", "account")">ログアウト</a>
                            </div>
                </div>
                </div>
            </nav>

            <div style="margin-top: 28px;" class="container">
                <div class="register-body" style="background-color: rgb(255, 255, 255);padding:15px;">
                    <div class="form-text text-danger">
                        @if (TempData["custom-validation-message"] != null)
                        {
                            <div class="col-lg-5 col-md-12 col-sm-12 mb-3 alert alert-danger alert-dismissible fade show" role="alert">
                              <span>@TempData["custom-validation-message"]</span>
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: none;border-style: none;float: right;">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div><br />
                        }
                    </div>
                    <div class="form-text text-success">
                        @if (TempData["custom-validation-success-message"] != null)
                        {
                            <div class="col-lg-5 col-md-12 col-sm-12 mb-3 alert alert-success alert-dismissible fade show" role="alert">
                              <span>@TempData["custom-validation-success-message"]</span>
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: none;border-style: none;float: right;">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div><br />
                        }
                    </div>
                    <div class="">
                        <form class="p-3" method="post" asp-action="NormalUserEditConfirm" asp-controller="Account">
                    
                            <div class="col-lg-12 row">
                                <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                                    <label for="username" style="margin-bottom: 0.5rem;color: #292121;">ユーザ名</label>
                                    <input type="text" class="form-control" asp-for="UserDispName">
                                </div>
                            </div> 
                            <div class="col-lg-12 row">
                                <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                                    <label for="username" style="margin-bottom: 0.5rem;color: #292121;">メールアドレス</label>
                                    <input readonly type="text" class="form-control" asp-for="Email">
                                    <input type="hidden" class="form-control" asp-for="Email">
                                </div>
                            </div>
                            <div class="col-lg-12 row">
                                <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                                    <label for="phoneno" style="margin-bottom: 0.5rem;color: #292121;">連絡先</label>
                                    <input type="text" class="form-control" asp-for="PhoneNumber">
                                </div>
                            </div>
                            <div class="col-lg-12 mb-4 row">
                                <div class="col-lg-5 col-md-12 col-sm-12">
                                    <label for="role" style="margin-bottom: 0.5rem;color: #292121;">権限</label>
                                    <select class="form-select"  asp-for="Discriminator">
                                        <option selected>一般</option>
                                        <option>管理者</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 row">
                                <div class="col-lg-5 col-md-12 col-sm-12 mb-3">
                                    <label for="phoneno" style="margin-bottom: 0.5rem;color: #292121;">有効</label>
                                    <input type="checkbox" asp-for="user_visibility">
                                </div>
                            </div>
                            <div class="col-lg-12 mb-3 row">
                                <div class="col-lg-5 col-md-12 col-sm-12">
                                   @* <button type="button" class="col-4 btn btn-light" style="border-color: #dbdbdb !important;" onclick="window.location='@Url.Action("NormalUserList","account")';">一覧に戻る</button>
                                    <button type="submit" class="col-4 btn btn-primary" id="btn-register">変更</button>*@
                                     @*編集ボタン機能*@
                                  <button type="button" class="btn btn-default btn-back" onclick="window.location='@Url.Action("NormalUserList","account")';">一覧に戻る</button>                                    
                                 <button type="submit" class="btn btn-default btn-create"  id="btn-register">変更</button>
                                 @*ssa20220527*@
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script class="jsbin" src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
<script>
</script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>